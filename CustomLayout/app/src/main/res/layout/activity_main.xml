<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myggum.customlayout.MainActivity">

    <Button

        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/container"
        android:layout_toRightOf="@+id/container"
        android:text="색깔" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/container"
        android:layout_toRightOf="@+id/container"
        android:text="자막 생성" />
    <FrameLayout

        android:id="@+id/container"
        android:layout_width="216dp"
        android:layout_height="384dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">
        <ImageView
            android:background="@drawable/layout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/zzz" />
    </FrameLayout>

    <FrameLayout
        android:paddingTop="5dp"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/container"
        >
        <HorizontalScrollView
            android:scrollbars="none"
            android:id="@+id/font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:visibility="visible" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:onClick="onClick"
                    android:id="@+id/barungothic"
                    android:layout_margin="5dp"
                    android:background="@drawable/barungodic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/gothic"
                    android:onClick="onClick"
                    android:background="@drawable/godic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/myungjo"
                    android:onClick="onClick"
                    android:background="@drawable/myungjo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/brush"
                    android:onClick="onClick"
                    android:background="@drawable/brush"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/pen"
                    android:onClick="onClick"
                    android:background="@drawable/pen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            </HorizontalScrollView>

        <TextView
            android:id="@+id/bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/holo_orange_light"
            android:text="1"
            android:textStyle="bold"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/textcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/holo_green_light"
            android:text="2"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light"
            android:text="3"
            android:textStyle="bold"
            android:visibility="invisible" />





    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/captionattr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/frame"
        />
</RelativeLayout>
